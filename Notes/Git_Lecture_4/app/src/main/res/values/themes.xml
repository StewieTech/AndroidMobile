<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Custom" parent = "Theme.Material3.Light">
        <item name="colorPrimary">@color/orange</item>
        <item name="actionBarTheme">@style/Theme.Custom.ActionBarTheme</item>
        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>
    </style>

    <style name="Theme.Custom.ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/orange</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.Custom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>